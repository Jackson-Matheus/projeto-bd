<!DOCTYPE html>
<html>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }
    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    async function goBack() {
        const url = '/profile'
        await axios.get(url);
        window.location.href = url
    }

</script>

<body>
    <div>
        <div>
            <button onclick="goBack()">Voltar</button>
        </div>
        <div>
            <h2>Faça seu pedido aqui</h2>
        </div>
        <div> 
            <form action="/order" method="POST">
                <input type="text" name="name" placeholder="produto" required>
                <br>
                <input type="text" name="location" placeholder="local de entrega" required>
                <br>
                <label>hora de entrega </label>
                <input type="time" name="hour" required>
                <br>

                <label>Data da entrega </label>
                <input type="date" name="date" min="2015-01-01" max="2022-01-01"  value="2017-06-01" required>
                <br>

                <input type="text" name="observation" placeholder="observação" required>
                <br>
                
                <input type="number" name="change" placeholder="troco" min="0" required>
                <br>
                <input type="number" name="id" placeholder="registro do comprador" min="0" required>
                <br><br>
                <button type="submit">Fazer pedido</button>
            </form>
            <br>
            <br>
            <br>
            
        </div>
        <div>
            <table>
                <tr>
                    <th>Registro</th>                    
                    <th>Nome do vendedor</th>
                    <th>Produto</th>
                    <th>Preco</th>
                    <th>Descrição</th>
                    <th>Quantidade</th>                   
                </tr>
                <tbody>
                    <% if(product.length > 0){
                        for(var i = 0; i< product.length; i++) {                             
                    %>
                    <tr>
                        <td><%= product[i].id_produto %></td>
                        <td><%= product[i].nome_user %></td>
                        <td><%= product[i].nome_produto %></td>                        
                        <td><span>R$</span> <%= product[i].preco %></td>
                        <td><%= product[i].descricao %></td>                        
                        <td><%= product[i].quantidade %></td>                                                        
                    </tr>
                    <% }                                     
                }%>


            </table>
        </div>
       

    </div>




</body>

</html>