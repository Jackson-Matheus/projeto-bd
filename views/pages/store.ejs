<!DOCTYPE html>
<html>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    async function goHistoric() {
        const url = '/historic';
        await axios.get(url);
        window.location.href = url
    }

    async function goBack() {
        const url = '/profile';
        await axios.get(url);
        window.location.href = url

    }
</script>

<body>

    <div>
        <h2>Cadastro de produtos</h2>
        <form action="/product" method="POST">
            <input type="text" name="name" placeholder="produto" required>
            <br>
            <input type="number" name="price" placeholder="Preco" required>
            <br>
            
            <input type="text" name="description" placeholder="Descrição" required>
            <br>

            <input type="number" name="amount" placeholder="quantidade" required>
            <br>
            <button type="submit">Cadastrar produto</button>
        </form>
    </div>
    <div>
        <button onclick="goBack()">Voltar</button>
    </div>
    <div>
        <h2>Seus produtos</h2>
    </div>
    <div>
            <table>
                    <tr>
                        <th>Produto</th>
                        <th>Descrição</th>
                        <th>Preco</th>     
                        <th>Quantidade</th>
                        <th></th>
                        
    
                    </tr>
                    <tbody>
                        <% if(product.length > 0){
                               
                                for(var i = 0; i< product.length; i++) {%>
                        <tr>
                            <td><%= product[i].nome_produto %></td>
                        
                            <td><%= product[i].descricao %></td>
                            <td><span> R$</span>   <%= product[i].preco %></td>
                            <td><%= product[i].quantidade %></td>
                            <td><a href="/store/<%=product[i].id_produto%>">Editar</a> </td>                                
                        </tr>
                        <% }                                         
                    } %>
                        
                        
    
      
        </div>

    </div>
</body>

</html>